{
  "extends": [
    "../tslint.common.json",
    "tslint-react"
  ],
  "rules": {
    "file-name-casing": [
      true,
      {
        "index.tsx": "camel-case",
        ".tsx": "pascal-case",
        ".*": "camel-case"
      }
    ],
    "jsx-no-multiline-js": false,
    "jsx-space-before-trailing-slash": true,
    "quotemark": [
      true,
      "double",
      "jsx-double",
      "avoid-template"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "allow-leading-underscore"
    ]
  }
}
